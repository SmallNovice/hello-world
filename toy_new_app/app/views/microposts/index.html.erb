<h1>Microposts</h1>

<table>
	<thead>
		<tr>
			<th>context</th>
			<th>user_id</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @microposts.each do |micropost| %>
		<tr>
			<th><%= micropost.context %></th>
			<th><%= micropost.user_id %></th>
			<th><%= link_to "show", micropost %></th>
			<th><%= link_to "edit", edit_micropost_path(micropost) %></th>
			<th><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></th>
		</tr>
		<% end %>
	</tbody>
</table>
<%= link_to "new micropost", new_micropost_path %> |
